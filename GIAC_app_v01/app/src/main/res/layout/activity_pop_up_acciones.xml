<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fpop_up"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".menuPrincipal_U.registraAccidentes.PopUp_Acciones">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/times"
        android:gravity="center"
        android:text="Â¡Ante todo manten la calma!"
        android:textAlignment="center"
        android:textColor="#CDCFD1"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvdescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times"
        android:gravity="center"
        android:text="Antes de rellenar el parte de accidente, necesitamos saber si se requiere de personal de asistencia en carretera. Si es asi, pulsa el boton de asistencia para para conocer en primer lugar tu ubicacion y poder ayudarte, en caso de no neceistar asistencia, pulsa el boton Formulario para ir al formulario del parte."
        android:textAlignment="center"
        android:textColor="#CDCFD1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/Boton_blanco_S"
            android:id="@+id/btnAviso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:text="  Asistencia  " />

        <Button
            android:id="@+id/btnFormulario"
            style="@style/Boton_blanco_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="Formulario" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/info"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/times"
            android:text="Si prefieres ver un video explicativo puedes ver nuestro canal de YouTube pulsando en el icono."
            android:textAlignment="textStart"
            android:textColor="#CDCFD1"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>