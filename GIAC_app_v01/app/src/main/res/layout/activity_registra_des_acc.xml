<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorg"
    android:backgroundTintMode="src_atop"
    android:hapticFeedbackEnabled="false"
    android:layout_gravity="center"
    tools:context=".menuPrincipal_U.registraAccidentes.RegistraDesAcc">


    <TextView
        android:id="@+id/tvtit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times"
        android:layout_marginTop="20dp"
        android:text="REGISTRO DE ACCIDENTE"
        android:textColor="#306cb0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvsbtit"
        android:layout_width="200dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtit" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsbtit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/li"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"

                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvidUsuario"
                    android:layout_width="95dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/times"
                    android:layout_marginStart="30dp"
                    android:text="Id Usuario:"
                    android:textColor="#306cb0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvidNumUsuario"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/times"
                    android:text="0000"
                    android:textColor="#306cb0"
                    android:textSize="18sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvAccidente"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/times"
                    android:layout_marginStart="-22dp"
                    android:text="Id Accidente:  "
                    android:textColor="#306cb0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvidNumAccidente"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/times"
                    android:text="0000"
                    android:textColor="#306cb0"
                    android:textSize="18sp"
                    android:textStyle="italic|bold"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDescricionSuceso"
                style="@style/TextView_Azul"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:text="DESCRIBE LO OCURRIDO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/borde_descripcion"
                android:ems="20"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="50dp"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvcargaimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="IMAGENES DEL SUCESO"
                android:textAlignment="center"
                android:fontFamily="@font/times"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="#306cb0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="70"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:background="#cecece"
                    android:src="@drawable/fotosapp"
                    />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:background="#cecece"
                    android:src="@drawable/fotosapp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="70"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:background="#cecece"
                    android:src="@drawable/fotosapp"/>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:background="#cecece"
                    android:src="@drawable/fotosapp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvcargaimgImplicado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="IMAGENES DE VEHICULOS AFECTADOS"
                android:textAlignment="center"
                android:fontFamily="@font/times"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="#306cb0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="70"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:background="#cecece"
                    android:src="@drawable/fotosapp"/>
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:background="#cecece"
                    android:src="@drawable/fotosapp"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:layout_editor_absoluteX="10dp">

        <Button
            android:id="@+id/btnBorra"
            style="@style/Boton_blanco_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:text="Borrar" />

        <Button
            android:id="@+id/btnguardar"
            style="@style/Boton_blanco_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:text="Guardar" />

    </LinearLayout>

    <Button
        android:id="@+id/btnpdf"
        style="@style/Boton_blanco_S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:backgroundTint="#A11E1E"
        android:gravity="center"
        android:text="GENERAR PDF"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>