<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/btn_contorno_blanco_l">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvidentificacionIA"
                style="@style/TextosBlancos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="Accidente/Incidencia"
                android:textAlignment="center"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
            <TextView
                style="@style/TextosBlancos"
                android:id="@+id/fechaSuceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                android:layout_marginTop="5dp"
                android:text="Matricula vehiculo"
                android:textSize="16dp"/>

                <TextView
                style="@style/TextosBlancos"
                android:id="@+id/idempleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="5dp"
                android:text="Matricula vehiculo"
                android:textSize="16dp"/>

            </LinearLayout>
            <TextView
                style="@style/TextosBlancos"
                android:id="@+id/estadoSuceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10dp"
                android:text="Fecha suceso"
                android:textSize="18dp"/>

            <TextView
                style="@style/TextosBlancos"
                android:id="@+id/contacto"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="18dp"/>

            <View
                android:layout_width="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:layout_height="5dp"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgMail"
                android:src="@drawable/email"
                android:background="@drawable/btn_contorno_blanco_l_select"
                android:layout_width="100dp"
                android:layout_marginEnd="10dp"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/imggiac"
                android:src="@drawable/infogiac"
                android:padding="5dp"
                android:background="@drawable/btn_contorno_blanco_l_select"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/imgTelefono"
                android:src="@drawable/phone"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_contorno_blanco_l_select"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>