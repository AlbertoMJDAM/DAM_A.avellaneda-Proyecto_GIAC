<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2C5993</item>
        <item name="colorPrimaryVariant">#17529E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- NOTA: ESTILOS PREPARADOS PARA EL REGISTRO DE USUARIOS NO MODIFICAR!!!. Si te sirven asi utilizalos!
     Per si necesitas realizar algun cambio en los estilos de textos, copia y renombra el style y haz los
     cambios.Si lo quieres cambiar solo un texto si hacer nuevo estilo, las modificaciones del activity prevalecen
     sobre el style. -->


    <!-- Textos color azul cortos (Una palabra). Similares a "Nombre" de registro de usuarios. -->
    <style name="TextView_Azul" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor"> #306cb0</item>
        <item name="android:layout_width">254dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">250dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Textos color azul largos (Dos o mas palabras). Similares a "Fecha de Nacimiento" de registro de usuarios. -->
    <style name="TextView_Azul_largos" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#306cb0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Textos para los hints de los editText. Â¡NO VALIDOS PARA HACER TEXTVIEWS! -->
    <style name="TextoHint" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Textos color blancos. Similares a "REGISTRATE" de login de usuarios. -->
    <style name="TextosBlancos" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Estilo para TextInputEditText de registro de usuarios. -->
    <style name="TextInputEditText_RegistroUsu">
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor"> #000000</item>
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Estilo para Botones blancos rellenos. Similares a boton "GUARDAR" de registro de usuarios. -->
    <style name="Boton_blanco_S" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#306cb0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation"> 10dp</item>
        <item name="android:padding"> 10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Estilo para Botones con contorno blanco grandes y sin relleno. -->
    <style name="Boton_blanco_contorno_L" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/btn_contorno_blanco_l</item>
    </style>

    <!-- Estilo para Botones Azules rellenos grandes. Similares a boton "ACCEDER" de login de usuarios. -->
    <style name="Boton_azul_L" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">228dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/times</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">#2C5993</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Estilo para Crear los menus emergentes de los Mapas. -->
    <style name="Theme.CrearPopUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CrearPopUp.as">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>




</resources>